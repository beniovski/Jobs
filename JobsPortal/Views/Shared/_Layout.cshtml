<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — moja aplikacja platformy ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:400,500,700,300" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Signika+Negative:400,300,600,700" rel="stylesheet" type="text/css">

</head>
<body>
    <!-- header -->
    <header id="header" class="clearfix">
        <!-- navbar -->
        <nav class="navbar navbar-default">
            <div class="container">
                <!-- navbar-header -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="index.html"><img class="img-responsive" src="images/logo.png" alt="Logo"></a>
                </div>
                <!-- /navbar-header -->

                <div class="navbar-left">
                    <div class="collapse navbar-collapse" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="index.html">Home</a></li>
                            <li>@Html.ActionLink("Oferty pracy", "AllOFers", "JobOffer")</li>
                            <li><a href="details.html">Job Details</a></li>
                            <li><a href="resume.html">Resume</a></li>
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">Pages<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="profile.html">Profile</a></li>
                                    <li><a href="post-resume.html">Post Resume</a></li>
                                    <li><a href="post.html">Job Post</a></li>
                                    <li><a href="edit-resume.html">Edit Resume</a></li>
                                    <li><a href="profile-details.html">profile Details</a></li>
                                    <li><a href="bookmark.html">Bookmark</a></li>
                                    <li><a href="applied-job.html">Applied Job</a></li>
                                    <li><a href="delete-account.html">Close Account</a></li>
                                    <li><a href="signup.html">Job Signup</a></li>
                                    <li><a href="signin.html">Job Signin</a></li>
                                </ul>
                            </li>
                            <li>@Html.ActionLink("Dodaj Ofertę !", "AddJobOffer", "Account")</li>

                            @if(HttpContext.Current.User.Identity.IsAuthenticated == true)
                            {
                                <li>kolejne menu</li>
                            }
                          
                        </ul>
                    </div>
                </div><!-- navbar-left -->
                <!-- nav-right -->
                <div class="nav-right">
                   
                    <ul class="sign-in">
                        @if (HttpContext.Current.User.Identity.IsAuthenticated == true)
                        {
                            <li>@User.Identity.Name</li>
                            <li>@Html.ActionLink("Wyloguj !", "LogOff", "Account")</li>
                        }
                       else
                        {
                            <li><i class="fa fa-user"></i></li>
                            <li>@Html.ActionLink("Login", "Login", "Account")</li>
                            <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    
                        }
                       
                    </ul><!-- sign-in -->

                    
                </div>
                <!-- nav-right -->
            </div><!-- container -->
        </nav><!-- navbar -->
    </header><!-- header -->
    @RenderSection("HomeSlider", required: false)


    @RenderBody()
    <hr />
    <!-- footer -->
    <footer id="footer" class="clearfix">
        <!-- footer-top -->
        <section class="footer-top clearfix">
            <div class="container">
                <div class="row">
                    <!-- footer-widget -->
                    <div class="col-sm-3">
                        <div class="footer-widget">
                            <h3>Quik Links</h3>
                            <ul>
                                <li><a href="#">About Us</a></li>
                                <li><a href="#">Contact Us</a></li>
                                <li><a href="#">Careers</a></li>
                                <li><a href="#">All Cities</a></li>
                                <li><a href="#">Help & Support</a></li>
                                <li><a href="#">Advertise With Us</a></li>
                            </ul>
                        </div>
                    </div><!-- footer-widget -->
                    <!-- footer-widget -->
                    <div class="col-sm-3">
                        <div class="footer-widget">
                            <h3>How to sell fast</h3>
                            <ul>
                                <li><a href="#">How to sell fast</a></li>
                                <li><a href="#">Membership</a></li>
                                <li><a href="#">Banner Advertising</a></li>
                                <li><a href="#">Promote your ad</a></li>
                                <li><a href="#">Jobs Delivers</a></li>
                                <li><a href="#">FAQ</a></li>
                            </ul>
                        </div>
                    </div><!-- footer-widget -->
                    <!-- footer-widget -->
                    <div class="col-sm-3">
                        <div class="footer-widget social-widget">
                            <h3>Follow us on</h3>
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook-official"></i>Facebook</a></li>
